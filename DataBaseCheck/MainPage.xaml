<Page x:Class="DataBaseCheck.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBaseCheck"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MainPage" Loaded="Page_Loaded">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*">
            </RowDefinition>
            <RowDefinition Height="*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.ColumnSpan="4">
            <DataGrid FontSize ="24" IsReadOnly ="true" ColumnWidth="*" x:Name="MainTable" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      Loaded="MainTable_Loaded" Margin="5" ItemsSource="{Binding Source=ClientContext}" 
                       RowBackground="Transparent" Background="Transparent" BorderBrush="#FFFF1679" Foreground="#FF6BFF00"
                      VerticalGridLinesBrush="#FFFF1679" HorizontalGridLinesBrush="#FFFF1679"
                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      >
                <DataGrid.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.RowHeaderStyle>
                    <Style TargetType="{x:Type DataGridRowHeader}">
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </DataGrid.RowHeaderStyle>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="2">
            <Button Grid.Column="0" FontSize="24" x:Name="AddButton" Content="ADD" FontWeight="Bold" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Click="AddButton_Click" BorderBrush="#FFFF1679" BorderThickness="1" Background="Transparent" Foreground="#FF6BFF00" Margin="5" MouseEnter="AddButton_MouseEnter" MouseLeave="AddButton_MouseLeave">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <Button Margin="5" FontSize="24" x:Name="ChangeButton" Content="CHANGE" FontWeight="Bold" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Click="ChangeButton_Click" BorderBrush="#FFFF1679" Foreground="#FF6BFF00" Background="Transparent" Grid.Column="1" Grid.Row="2" MouseEnter="ChangeButton_MouseEnter" MouseLeave="ChangeButton_MouseLeave">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Margin="5" Grid.Column="2" FontSize="24" x:Name="DeleteButton" Content="DELETE" FontWeight="Bold" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Click="DeleteButton_Click" BorderBrush="#FFFF1679" Foreground="#FF6BFF00" Background="Transparent" Grid.Row="2" MouseEnter="DeleteButton_MouseEnter" MouseLeave="DeleteButton_MouseLeave">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button  x:Name="FindButton" Content="🔍" FontWeight="Bold" Background="Transparent" FontSize="24" Grid.Column="3" HorizontalAlignment="Stretch" Margin="5" Grid.Row="2" VerticalAlignment="Stretch" Foreground="#FF6BFF00" MouseEnter="FindButton_MouseEnter" MouseLeave="FindButton_MouseLeave" Click="FindButton_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="TextBoxConnect" Grid.Row="0" Grid.Column="0" Background="Transparent" HorizontalAlignment="Stretch" Height="40" Margin="5,25,5,5" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" FontSize="12" Foreground="#FF6BFF00" BorderBrush="#FFFF1679">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button x:Name="ButtonConnect" Content="CONNECT" Background="Transparent" FontSize="24" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch" Foreground="#FF6BFF00" BorderBrush="#FFFF1679" Click="ButtonConnect_Click" FontWeight="Bold" MouseEnter="ButtonConnect_MouseEnter" MouseLeave="ButtonConnect_MouseLeave">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="Connection string:" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Foreground="#FF6BFF00"/>
        <Label Content="Font size:" FontSize="24" HorizontalAlignment="Left" Margin="0,0,5,3" VerticalAlignment="Bottom" Foreground="#FF6BFF00"/>
        <TextBox x:Name="TextBoxFontSize" Text="24" Grid.Row="0" Grid.Column="0" Background="Transparent" HorizontalAlignment="Left" Width="100" Height="40" Margin="110,0,0,3" TextWrapping="NoWrap" VerticalAlignment="Bottom" FontSize="28" Foreground="#FF6BFF00" BorderBrush="#FFFF1679" TextChanged="TextBoxFontSize_TextChanged" PreviewTextInput="TextBoxFontSize_PreviewTextInput">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
    </Grid>
</Page>
